<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="0dp"
    android:layout_marginTop="0dp"
    android:minHeight="200dp"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".Cal_Home" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:ellipsize="start"
            android:gravity="right|center_vertical"
            android:layout_weight="3"
            android:maxHeight="28sp"
            android:maxLines="1"
            android:scrollbars="horizontal"
            android:singleLine="true"
            android:textColor="@color/DimGrey"
            android:textSize="26sp"
            android:typeface="monospace"
            android:visibility="visible" />
        
         <TextView
             android:id="@+id/textView2"
             android:layout_width="match_parent"
             android:layout_height="0dip"
             android:layout_weight="1.8"
             android:maxHeight="25sp"     
             android:maxLines="1"
             android:singleLine="true"                           
             android:textColor="@color/silver"
             android:textSize="15sp"
             android:typeface="monospace"
			 android:gravity="right|center_vertical"
             android:visibility="visible"
              />

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="0dp"
            android:layout_weight=".3"
            android:layout_marginTop="0dp"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:paddingBottom="0dp"
            android:paddingTop="0dp" >

            <Button
                android:id="@+id/btn_inverse"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ddd"
                android:text="@string/inverse"
                android:textColor="#333"
                android:textSize="15sp"
                android:textStyle="normal" />
            <Button
                android:id="@+id/btn_square"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ddd"
                android:text="@string/x2"
                android:textColor="#333"
                android:textSize="15sp"
                android:textStyle="normal" />
            <Button
                android:id="@+id/btn_sqrt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ddd"
                android:text="@string/sqrt"
                android:textColor="#333"
                android:textSize="15sp"
                android:textStyle="normal" />
          
            <Button
                android:id="@+id/btn_clear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ccc"
                android:text="@string/all_clear"
                android:textColor="@color/Dark"
                android:textSize="15sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/btn_bracket_open"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ccc"
                android:text="@string/open_brk"
                android:textColor="@color/Dark"
                android:textSize="15sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/btn_bracket_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ccc"
                android:text="@string/close_brk"
                android:textColor="@color/Dark"
                android:textSize="15sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ccc"
               
                android:text="@string/back_space"
                android:textColor="@color/Dark"
                android:textSize="15sp"
                android:textStyle="normal" />
         

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:gravity="bottom"
            android:layout_weight=".3"
            android:orientation="horizontal"
            android:paddingBottom="0dp"
            android:paddingTop="0dp" >

            <Button
                android:id="@+id/btn_log"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ddd"
                android:text="@string/log"
                android:textColor="#333"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_ln"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ddd"
                android:text="@string/ln"
                android:textColor="#333"
                android:textSize="15sp" />

              <Button
                  android:id="@+id/btn_e"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:background="#ddd"
                  android:text="@string/e"
                  android:textColor="#333"
                  android:textSize="15sp" />
               
                <Button
                android:id="@+id/btn_seven"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ddd"
                android:text="@string/number_7"
                android:textColor="#333"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_eight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="#ddd"
      			
                android:text="@string/number_8"
                android:textColor="#333"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_nine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="#ddd"
      			
                android:text="@string/number_9"
                android:textColor="#333"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_multiple"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ccc"
                
                android:text="@string/mul"
                android:textColor="@color/Dark"
                android:textSize="15sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:gravity="bottom"
            android:layout_weight=".3"
            android:orientation="horizontal"
            android:paddingBottom="0dp"
            android:paddingTop="0dp" >

            <Button
                android:id="@+id/btn_tanh"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ddd"
                android:text="@string/tanh"
                android:textColor="#333"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_tan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ddd"
      			
                android:text="@string/tan"
                android:textColor="#333"
                android:textSize="15sp" />
            <Button
                android:id="@+id/btn_fact"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ddd"
      			
                android:text="@string/fact"
                android:textColor="#333"
                android:textSize="15sp" />
            
            <Button
                android:id="@+id/btn_four"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ddd"
      			
